@model Order

<h2>Check out now</h2>
<p>Please enter your details!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <table>
        <tr>
            <td><h3>Customer</h3></td>
        </tr>
        <tr>
            <td><label>Full Name:</label></td>
            <td><input asp-for="Name" class="form-control" /></td>
        </tr>
        <tr>
            <td><h3>Address</h3></td>
        </tr>
        <tr>
            <td><label>Line 1:</label></td>
            <td><input asp-for="Line1" class="form-control" /></td>
        </tr>
        <tr>
            <td><label>Line 2:</label></td>
            <td><input asp-for="Line2" class="form-control" /></td>
        </tr>
        <tr>
            <td><label>Line 3:</label></td>
            <td><input asp-for="Line3" class="form-control" /></td>
        </tr>
        <tr>
            <td><label>City:</label></td>
            <td><input asp-for="City" class="form-control" /></td>
        </tr>
        <tr>
            <td><label>State:</label></td>
            <td><input asp-for="State" class="form-control" /></td>
        </tr>
        <tr>
            <td><label>Zip:</label></td>
            <td><input asp-for="Zip" class="form-control" /></td>
        </tr>
        <tr>
            <td><label>Country:</label></td>
            <td><input asp-for="Country" class="form-control" /></td>
        </tr>
        <tr>
            <td><h3>Options</h3></td>
            <td>
                <label>
                    <input asp-for="GiftWrap" /> I certify that the above information is true and correct.
                </label>                
            </td>
        </tr>
        <tr>
            <td>
                <div class="text-center">
                    <input class="btn btn-primary" type="submit" value="Complete Order" />
                </div>
            </td>
        </tr>
    </table>
</form>